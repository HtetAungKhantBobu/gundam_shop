<div class="card">
    <img src="<%= product.img %>" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">
            <%= product.name%>
        </h5>
        <div class="product-description">
            <p class="card-text">
                <%= product.description %>
            </p>
            <div class="product-info-btns">
                <button type="button" class="btn btn-sm btn-outline-primary">
                    View
                </button>

            </div>
        </div>
    </div>
</div>